{
    "server": {
        "app": {
            "description": "hapi-yar"
        }
    },
    "connections": [
        {
            "port": 9000,
            "labels": ["web-ui", "api"]
        }
    ],
    "plugins": {
        "./api": {
            "method": "GET",
            "path": "/api/{p*}" 
        },
        "./cookie": {
            "ttl": null,
            "isSecure": false,
            "path": "/api",
            "isHttpOnly": true,
            "clearInvalid": true
        },
        "good": {
            "reporters": [{
                "reporter": "good-console",
                "args": [{
                    "log": "*",
                    "response": "*"
                }]
            }]
        },
        "./reverse": {
            "method": "GET",
            "path": "/service/{p*}",
            "proxypath": "http://localhost:9000/api/"
        },
        "./static": {
            "path": "/dist/{filename*}",
            "dirpath": "./client/dist"
        },
        "./token": null,
        "visionary": {
            "engines": {
                "hbs": "handlebars"
            },
            "path": "./views",
            "layoutPath": "./views/layout",
            "partialsPath": "./views/partials",
            "layout": true
        },
        "./ui": null
    }
}