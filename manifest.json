{
    "connections": [
        {
            "port": 9000,
            "labels": ["web-ui", "api"]
        }
    ],
    "plugins": {
        "./api": {
            "method": "GET",
            "path": "/api/{p*}" 
        },
        "good": {
            "reporters": [{
                "reporter": "good-console",
                "args": [{
                    "log": "*",
                    "response": "*"
                }]
            }]
        },
        "./static": {
            "path": "/dist/{filename*}",
            "dirpath": "./client/dist"
        },
        "./token": null,
        "./ui": null,
        "visionary": {
            "engines": {
                "hbs": "handlebars"
            },
            "path": "./views",
            "layoutPath": "./views/layout",
            "partialsPath": "./views/partials",
            "layout": true
        },
        "yar": {
            "name": "auth_payload",
            "cookieOptions": {
                "password": "urbn",
                "ttl": 180000,
                "isSecure": false,
                "path": "/",
                "isHttpOnly": true,
                "clearInvalid": true
            }
        }
    }
}